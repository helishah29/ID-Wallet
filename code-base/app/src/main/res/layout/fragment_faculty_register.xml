<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FacultyRegister">

    <TextView
        android:id="@+id/tvhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/background_dark"
        android:text="FACULTY REGISTER" />

    <EditText
        android:id="@+id/idnumber"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="ID Number"
        android:inputType="text"
        android:padding="15dp"
        android:textColorHint="?attr/colorButtonNormal"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/tvhead"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        android:padding="15dp"
        android:textColorHint="?attr/colorButtonNormal"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/idnumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="Department"
        android:inputType="text"
        android:padding="15dp"
        android:textColorHint="?attr/colorButtonNormal"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="Password"
        android:inputType="text"
        android:padding="15dp"
        android:textColorHint="?attr/colorButtonNormal"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/department"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="PIN"
        android:inputType="text"
        android:padding="15dp"
        android:textColorHint="?attr/colorButtonNormal"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGNUP"
        android:background="#999999"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp" />

    <Button
        android:id="@+id/frscan"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:textSize="20dp"
        android:text="SCAN"
        android:layout_above="@+id/name"
        android:layout_toRightOf="@+id/idnumber"
        android:layout_toEndOf="@+id/idnumber"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

</RelativeLayout>
